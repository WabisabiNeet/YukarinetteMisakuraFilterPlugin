<UserControl x:Class="YukarinetteMisakuraFilterPlugin.SettingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YukarinetteMisakuraFilterPlugin"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock>みさくら語コンバーター with ゆかりねっと</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="変換割合" Padding="0" Margin="0,0,5,0" />
                <Slider x:Name="slider" Minimum="0" Maximum="100" SmallChange="5" LargeChange="5" Width="100" IsSnapToTickEnabled="True" />
                <TextBlock Text="{Binding Value, ElementName=slider}" Margin="5,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
